#include<iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter the number of elements : ";
    cin>>n;
    int arr[n];
    int i;
    for(i=0;i<n;i++) {
        cin>>arr[i];
    }
    int maxi = arr[0];
    for(i=1;i<n;i++) {
        if(maxi<arr[i]) {
            maxi = arr[i];
        }
    }
    cout<<"Maximum element is : "<<maxi<<endl;
    return 0;
}


#include<iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter the number of elements : ";
    cin>>n;
    int arr[n];
    int i;
    for(i=0;i<n;i++) {
        cin>>arr[i];
    }
    int mini = arr[0];
    for(i=1;i<n;i++) {
        if(mini >arr[i]) {
            maxi = arr[i];
        }
    }
    cout<<"Maximum element is : "<<mini<<endl;
    return 0;
}
