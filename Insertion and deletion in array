[12:08, 10/11/2025] ...: insertion at beginning
#include<iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter the number of elements in array : ";
    cin>>n;
    int arr[100];
    int i;
    for(i=0;i<n;i++) {
        cin>>arr[i];
    }
    int new_ele;
    cout<<"Enter new element to add in beginning : ";
    cin>>new_ele;
    for(i=n-1;i>=0;i--) {
        arr[i+1] = arr[i];
    }
    arr[0] = new_ele;
    n++;
    cout<<"Updated array is : ";
    for(i=0;i<n;i++) {
        cout<<arr[i]<<" ";
    }
    return 0;
}





deletion at beginning
#include<iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter the number of elements in array : ";
    cin>>n;
    int arr[100];
    int i;
    for(i=0;i<n;i++) {
        cin>>arr[i];
    }
    for(i=0;i<n-1;i++) {
        arr[i]= arr[i+1];
    }
    n--;
    cout<<"Updated array is : ";
    for(i=0;i<n;i++) {
        cout<<arr[i]<<" ";
    }
    return 0;
}



deletion at end
#include<iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter the number of elements in array : ";
    cin>>n;
    int arr[100];
    int i;
    for(i=0;i<n;i++) {
        cin>>arr[i];
    }
    n--;
    cout<<"Updated array is : ";
    for(i=0;i<n;i++) {
        cout<<arr[i]<<" ";
    }
    return 0;
}


insertion at any specific postion 
#include<iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter the number of elements in array : ";
    cin>>n;
    int arr[100];
    int i;
    for(i=0;i<n;i++) {
        cin>>arr[i];
    }
    int new_ele;
    cout<<"Enter new element that you want to insert : ";
    cin>>new_ele;
    int pos;
    cout<<"Enter the position : ";
    cin>>pos;
    for(i=n-1;i>=pos-1;i--) {
        arr[i+1] = arr[i];
    }
    arr[pos-1] = new_ele;
    n++;
    cout<<"Updated array is : ";
    for(i=0;i<n;i++) {
        cout<<arr[i]<<" ";
    }
    return 0;
}



deletion at any specific postion
#include<iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enterthe number of elements in array : ";
    cin>>n;
    int arr[100];
    int i;
    for(i=0;i<n;i++) {
        cin>>arr[i];
    }
    int pos;
    cout<<"Enter the position : ";
    cin>>pos;
    for(i=pos-1;i<n-1;i++) {
        arr[i] = arr[i+1];
    }
    n--;
    cout<<"Updated array is : ";
    for(i=0;i<n;i++) {
        cout<<arr[i]<<" ";
    }
    return 0;
}
