//insertion at beginning
#include<iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter the number of elements in array : ";
    cin>>n;

    int arr[100];
    for(int i=0; i<n; i++) {
        cin>>arr[i];
    }

    int newi;
    cout<<"Enter the new element to add in beginning : ";
    cin>>newi;

    // shift all elements one step to the right
    for(int i=n; i>0; i--) {
        arr[i] = arr[i-1];
    }

    arr[0] = newi;
    n++;

    cout<<"New array is: ";
    for(int i=0; i<n; i++) {
        cout<<arr[i]<<" ";
    }

    return 0;
}

