#include<iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter the no of elements : ";
    cin>>n;
    int arr[n];
    int i;
    for(i=0;i<n;i++) {
        cin>>arr[i];
    }
    int maxi = arr[0];
    for(i=1;i<n;i++) {
        if(maxi <arr[i]) {
            maxi = arr[i];
        }
    }
    int smaxi=arr[0];
    for(i=1;i<n;i++) {
        if((smaxi<arr[i] || smaxi == maxi ) && arr[i] != maxi) {
            smaxi = arr[i];
        }
    }
    cout<<"Second largest element is : "<<smaxi<<endl;
    return 0;
}


second smallest element in array
#include<iostream>
using namespace std;
int main() {
    int n;
    cout<<"Enter the number of elements : ";
    cin>>n;
    int arr[n];
    int i;
    for(i=0;i<n;i++) {
        cin>>arr[i];
    }
    int mini = arr[0];
    for(i=1;i<n;i++) {
        if(mini > arr[i]) {
            mini = arr[i];
        }
    }
    int smini= arr[0];
    for(i=1;i<n;i++) {
        if((smini > arr[i] || smini == mini) && arr[i] != mini) {
            smini = arr[i];
        }
    }
    cout<<"second smallest element is : "<<smini<<endl;
    return 0;
}
